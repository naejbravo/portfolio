---
// Supports weights 100-900
import '@fontsource-variable/roboto-slab';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Jean Bravo - Portfolio</title>
	</head>
	<body>
		<slot />
		<script src="../js/main.js"></script>
	</body>
</html>

<style is:global>
	* {
		margin 0;
		padding: 0;
		box-sizing: border-box;
	}

	p, h1, h2, h3, h4, h5, h6 {
		margin: 0;
	}

	:root {
		--color10: hsl(0, 0%, 10%);
		--color30: hsl(0, 0%, 30%);
		--color90: hsl(0, 0%, 90%);
		--color100: hsl(0, 0%, 100%);
		--accent: hsl(136, 23%, 46%);
		--ff: "Roboto Slab Variable", serif;
		--p: 1rem var(--ff);
		--h1: 600 7rem/1.2em var(--ff);
		--h2: 600 2rem/1.2em var(--ff);
		--spacing1: 4px;
		--spacing2: 8px;
		--spacing3: 16px;
		--spacing4: 20px;
		--spacing5: 40px;
		--spacing6: 80px;
		--spacing7: 160px;
	}

	html, body {
		margin: 0;
		width: 100%;
		scroll-behavior: smooth;
		text-wrap: balance;
		font: var(--p);
		background: var(--color100);
		color: var(--color10);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: var(--spacing6);	
	}

	h1	{
		font: var(--h1);
	}

	h2	{
		font: var(--h2);
	}

	p	{
		font: var(--p);
	}

	a	{
		color: var(--color10);
		text-decoration: none;
	}

	a:hover {
		color: var(--color30);
	}

	/*Header*/
	.header{
		display: flex;
		justify-content: space-between;
		border-bottom: 2px solid var(--color10);
        align-items: center;
        max-width: 60%;
        width: 60%;
		padding: var(--spacing3);
		@media screen and (max-width: 768px) {
			max-width: 100%;
			width: 100%;
		}
		position: sticky;
		top: 0;
		z-index: 1;
		background: var(--color100);
	}

    .header > div {
		display: flex;
		gap: 1rem;
	}

    .header > div > a {
        color: var(--color10);
        text-decoration: none;
    }

    .header > div > a:hover {
        color: var(--color30);
    }

    .header > div > a:active {
        color: var(--color100);
    }

	/*Hero*/
	.hero {
		display: flex;
		flex-direction: column;
		align-items: left;
		justify-content: left;
		gap: var(--spacing3);
		max-width: 60%;
		width: 60%;
		text-align: left;
		scroll-margin-top: 120px;
		& h1{
			color:var(--accent);
		}
		& .hero__description{
			font-size: 1.5rem;
		} 
		padding: var(--spacing3);
		@media screen and (max-width: 768px) {
			max-width: 100%;
			width: 100%;
		}
	}

	.hero > a {
		background: var(--accent);
		color: var(--color100);
		border: none;
		border-radius: 4px;
		cursor: pointer;
		display: flex;
		align-items: center;
		gap: var(--spacing3);
		padding: 0 var(--spacing3);
		width: 200px;
		padding: var(--spacing3);
		animation: bounce;
        animation-duration: 2s;
        animation-iteration-count: infinite;
		margin-top: var(--spacing3);
		&:hover {
			animation: none;
		}
    }

    @keyframes bounce {
        0% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0); }
    }
</style>
