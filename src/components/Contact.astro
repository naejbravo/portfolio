--- 
const props = Astro.props;
---
<div class="contact" id="contact" data-aos="fade-up">
    <h2>{props.title}</h2>
    <form class="form" action="https://formsubmit.co/naejbravo@gmail.com" method="POST">
        <input type="email" name="email" placeholder="your@email.com" required/>
        <textarea name="message" placeholder="What about work together?" required></textarea>
        <button type="submit">Submit</button>
    </form>
</div>

<style>
    .contact{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 60%;
        max-width: 60%;
        padding: var(--spacing3);
        @media screen and (max-width: 768px) {
			max-width: 100%;
			width: 100%;
		}
    }

    .form{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 300px;
        & button{
            width: 100px;
            padding: 1rem;
            background: var(--accent);
            color: var(--color100);
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    }

    .form input[type="email"]
    {
        width: 100%;
        padding: 1rem;
        background: var(--color10);
        color: var(--color100);
        &::placeholder{
            font: var(--p);
            color: var(--color100);
        }
    }

    .form textarea{
        width: 100%;
        padding: 1rem;
        background: var(--color10);
        height: 100px;
        color: var(--color100);
        &::placeholder{
            font: var(--p);
            text-align: left;
            color: var(--color100);
        }
    }

</style>
